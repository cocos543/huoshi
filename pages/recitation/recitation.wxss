/* pages/recitation/recitation.wxss */
@import "/wuxui/components/wux.wxss";

.weui-toast__content {
    color:#ffffff
}

page{
    background-color:#ffffff;
}

.header{
    display: inline-block;
    font-size: 32rpx; 
    line-height: 35rpx; 
    color: #313131;
}

.lsday-view{
    position:relative;
}

.lsday-view .label{
    color: #ffffff;
    font-size: 60rpx;
    position:absolute;
    top:100rpx;
}

.recite-view {
    display: flex;
    align-items:center;
    padding: 100rpx 24rpx 30rpx 24rpx;
}

.recite-view .label{
    display: inline-block;
    font-size: 32rpx; 
    line-height: 35rpx; 
    color: #313131;
}

.txtbox{
    margin: 0rpx 0rpx 0rpx 24rpx;
    padding: 12rpx 0rpx 12rpx 24rpx;
    border:1px;
    border-style: solid;
    border-color: #999999;
    color: #999999;
    line-height: 35rpx;
    font-size: 32rpx;
    width: 70%;
    position:relative;
}

.txtbox .progress{
    position:absolute;
    right:20rpx;
    top: 12rpx;
}

.recite-notice{
    padding-left: 180rpx;
}

.bluetxt{
    line-height: 30rpx;
    font-size: 28rpx;
    color: #40AAD3;
}

.startBtn{
    width: 230rpx;
    background-color: #FF9100;
    color: white;
    margin-top: 176rpx;
    font-size: 30rpx;
}

.change{
    text-align: center;
    padding-top: 50rpx;
}